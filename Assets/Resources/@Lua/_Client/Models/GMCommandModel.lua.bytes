--- GM Command

local GMCommands = {
    {
        name = "UseLocalDS",
        desc = "使用本地Local DS连接",
        Params = {
            {
                desc = "地图名",
                Text = ""
            }
        },
    }
}

local _M = _MOE.class("GMCommandModel", _MOE.BaseModel)

function _MOE:OnInit()
    self.GMCommandsMap = {}
    for _, cmd in pairs(GMCommands) do
        self.GMCommandsMap[cmd.name] = cmd
    end
end

---------------------------------------- 对外接口 ------------------------------

function _M:UseCommand(command, ...)
    if not command then
        return false
    end
    local command = self.GMCommandsMap[command]
    if command then
        local msg = {...}
        local paramStr
        if next(msg) ~= nil then
            local ret = true
            xpcall(
                function ()
                    paramStr = _MOE.Json.encode(msg)
                end,
                function (err)
                    ret = false
                    _G.ErrorHandler(err)
                end, nil
            )
            if not ret then
                return false
            end
        end
        return _MOE.GameApp:UseGM(command.name, paramStr)
    end
    return false
end

return _M